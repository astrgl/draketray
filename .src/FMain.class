Dim sOutput As String
' Dim sTemp As String = "8.8.8.8"  
   Shell "ping -c1 -w1 8.8.8.8" To sOutput
  ' Exec ["ping ", "-c1 " "-w1 ", sTemp] To sOutput                                    'Ping the target and store the output in sOutput"
