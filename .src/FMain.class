    Endif 
    $CONFIG = Val(File.Load(User.Home &/ "/.config/draketray/config"))
  Else 
   
     $CONFIG = Val(File.Load(User.Home &/ "/.config/draketray/config"))
    If Exist("/usr/bin/dnfdrake.gambas") And If ($CONFIG = 1 Or $CONFIG = 3) Then
       $DNFDRAKECHECK = 1
